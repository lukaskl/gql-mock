{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules", "dist", "./webpack.config.ts", "./cleanup-package-json.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es6"],
    "rootDirs": ["./src"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["src/typings", "../../node_modules/@types"],
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./dist"
  }
}
