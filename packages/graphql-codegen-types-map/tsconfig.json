{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "rootDirs": ["./src"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["src/typings", "../../node_modules/@types"],
    "experimentalDecorators": true
  }
}
